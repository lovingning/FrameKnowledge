<?xml version="1.0" encoding="utf-8"?>
<com.mnlin.hotchpotch.view.CircleLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_rootView"
    style="@style/TextViewStandard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_background_white_pressed_little_gray"
    android:gravity="center_horizontal"
    android:minHeight="@dimen/prefer_view_height"
    android:orientation="vertical">

    <com.mnlin.hotchpotch.view.CircleImageView
        android:id="@+id/civ_icon"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.mnlin.hotchpotch.view.MarqueeTextView
        android:id="@+id/mtv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</com.mnlin.hotchpotch.view.CircleLinearLayout>