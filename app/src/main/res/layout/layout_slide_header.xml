<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/prefer_slide_header_height"
              android:background="@drawable/placeholder"
              android:fitsSystemWindows="true"
              android:gravity="left|bottom"
              android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/max_view_height"
        android:layout_height="@dimen/max_view_height"
        android:layout_marginLeft="@dimen/prefer_view_padding_vertical"
        android:src="@mipmap/bluetooth"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/prefer_view_padding_vertical"
        android:layout_marginLeft="@dimen/prefer_view_padding_vertical"
        android:layout_marginTop="@dimen/prefer_view_padding_vertical"
        android:background="@color/transparent"
        android:gravity="center"
        android:padding="8dp"
        android:text="名字"
        android:textColor="@color/white"/>
</LinearLayout>