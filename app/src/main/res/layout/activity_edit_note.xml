<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_top_bar"/>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:background="@color/color_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width"/>

    <RadioGroup
        android:id="@+id/rg_util"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_line_gray_vertical"
        android:gravity="center"
        android:minHeight="@dimen/prefer_view_height"
        android:orientation="horizontal"
        android:showDividers="middle">

        <RadioButton
            android:id="@+id/rb_album"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="相册"
            android:textColor="@color/selector_normal_green_pressed_red"/>

        <RadioButton
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="相机"
            android:textColor="@color/selector_normal_green_pressed_red"/>

        <RadioButton
            android:id="@+id/rb_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/selector_normal_green_pressed_red"/>

        <RadioButton
            android:id="@+id/rb_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/selector_normal_green_pressed_red"/>
    </RadioGroup>
</LinearLayout>