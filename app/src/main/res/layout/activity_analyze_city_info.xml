<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="?attr/colorPrimary"
              android:layout_height="match_parent">
    <include layout="@layout/layout_top_bar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_city_switch"
            android:textColor="@color/text_label_hacker"
            android:text="当前城市(可点击此处进行切换)"
            android:textSize="@dimen/text_size_small"
            android:paddingLeft="@dimen/prefer_view_padding_horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_city"
            android:text="中国/广东/深圳/南山"
            android:paddingLeft="@dimen/prefer_view_padding_horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/prefer_view_height"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/text_label_hacker"
            android:text="城市详情"
            android:textSize="@dimen/text_size_small"
            android:paddingLeft="@dimen/prefer_view_padding_horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="城市信息介绍"
            android:paddingLeft="@dimen/prefer_view_padding_horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="@dimen/prefer_view_height"/>
    </LinearLayout>

</LinearLayout>